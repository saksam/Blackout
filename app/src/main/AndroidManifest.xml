<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.saksham.blackoutrestuarant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        tools:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/iconnn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconnn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".design.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".design.LoginHome"
            android:theme="@style/AppTheme.NoActionBar"
             />
        <activity
            android:name=".design.MainMenuSelectionFrag"
            android:label="@string/title_activity_main_menu_selection_frag"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
             />
        <activity
            android:name=".design.FoodDetail"
            android:theme="@style/AppTheme.NoActionBar"
             />
        <activity android:name=".design.Cart" />
        <activity android:name=".design.MyOrders" />
        <activity android:name=".design.MyOrderDetail" />
        <activity android:name=".design.SelectAddress"/>
    </application>

</manifest>